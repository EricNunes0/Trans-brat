<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">495dp</item>
        <item name="android:background">@drawable/container_login</item>
    </style>

    <style name="container2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="background">@drawable/container_nav</item>
        <item name="android:background">@drawable/container_nav</item>
    </style>

    <style name="Edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_login</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/button_login</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/splash_background</item>
    </style>

    <style name="form_question">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="form_subquestion">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Grupo dos inputs radio -->
    <style name="form_rg_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Opções dos input radio -->
    <style name="form_radio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:scaleType">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">normal</item>
        <!--<item name="android:button">@drawable/radio_selector</item>-->
    </style>

    <!-- Botões de informações amarelos -->
    <style name="form_info_button">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/button_info</item>
        <item name="android:text">?</item>
        <item name="android:textColor">@color/form_info_button</item>
    </style>

    <!-- Campos de entrada de texto -->
    <style name="form_input_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/edit_text_login</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/input_placeholder</item>
    </style>

    <!-- Campos de entrada de menu suspenso (dropdown) -->
    <style name="form_input_dropdown">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/edit_text_login</item>
        <item name="android:padding">7dp</item>
    </style>

    <!-- Botão de voltar -->
    <style name="form_back_button">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/button_back</item>
        <item name="android:drawableLeft">@drawable/icon_back</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:padding">5dp</item>
        <item name="android:text">Voltar</item>
        <item name="android:textColor">@color/blue_text</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Botão de cancelar -->
    <style name="form_cancel_button">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/button_cancel</item>
        <item name="android:drawableLeft">@drawable/icon_cancel</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:padding">5dp</item>
        <item name="android:text">Cancelar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Botão de avançar -->
    <style name="form_next_button">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/button_next</item>
        <item name="android:drawableRight">@drawable/icon_next</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:padding">5dp</item>
        <item name="android:text">Avançar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Imagem da área danificada do veículo -->
    <style name="form_damage_image">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:rotation">180</item>
    </style>

    <!-- Botão de área danificada do veículo -->
    <style name="form_damage_button">
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_height">98.5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/damage_area</item>
    </style>
        
</resources>