        android:layout_height="match_parent"
        android:background="#FFF"
        tools:context=".Form1">

        <!-- Barra de navegação -->
        <View
            android:id="@+id/navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#FFF"
            app:layout_constraintStart_toStartOf="@+id/form_2_layout"
            app:layout_constraintTop_toTopOf="@+id/form_2_layout" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/trlogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/content_desc_trlogo_imagem"
            android:src="@drawable/trlogo"
            app:layout_constraintEnd_toEndOf="@+id/navigation_bar"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="20dp" />

        <!-- Ícone de menu -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nav_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:background="#00FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/navigation_bar"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="10dp" />

        <ImageView
            android:id="@+id/nav_button_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/icon_menu"
            app:layout_constraintStart_toStartOf="@+id/nav_button"
            app:layout_constraintTop_toTopOf="@+id/nav_button"
            tools:ignore="MissingConstraints"/>

