<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/form_4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".Form4Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/form_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        tools:context=".Form4">

        <!-- Barra de navegação -->
        <View
            android:id="@+id/navigation_bar"
            style="@style/navigation_bar"
            app:layout_constraintStart_toStartOf="@+id/form_layout"
            app:layout_constraintTop_toTopOf="@+id/form_layout" />

        <!-- Logo da barra de navegação -->
        <ImageView
            android:id="@+id/navigation_bar_logo"
            style="@style/navigation_bar_logo"
            app:layout_constraintEnd_toEndOf="@+id/navigation_bar"
            tools:ignore="MissingConstraints" />

        <!-- Botão da barra de navegação -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/navigation_bar_button"
            style="@style/navigation_bar_button"
            app:layout_constraintStart_toStartOf="@+id/navigation_bar"
            tools:ignore="MissingConstraints" />

        <!-- Ícone do botão da barra de navegação -->
        <ImageView
            android:id="@+id/navigation_bar_button_icon"
            style="@style/navigation_bar_button_icon"
            app:layout_constraintStart_toStartOf="@+id/navigation_bar_button"
            app:layout_constraintTop_toTopOf="@+id/navigation_bar_button"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:id="@+id/form_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Outros veículos"
            android:textAlignment="center"
            android:textColor="@color/blue1"
            android:textSize="28dp"
            app:layout_constraintStart_toStartOf="@+id/navigation_bar"
            app:layout_constraintEnd_toEndOf="@+id/navigation_bar"
            app:layout_constraintTop_toBottomOf="@+id/navigation_bar" />

        <!-- Barra de progresso -->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="60"
            android:progressDrawable="@drawable/progress_bar"
            app:layout_constraintStart_toStartOf="@+id/navigation_bar"
            app:layout_constraintEnd_toEndOf="@+id/navigation_bar"
            app:layout_constraintBottom_toTopOf="@+id/form_title_line" />

        <!-- Linha horizontal -->
        <View
            android:id="@+id/form_title_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/form_title"
            />

        <!-- Informações sobre o formulário -->
        <View
            android:id="@+id/form_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/form_title_line"
            />

        <TextView
            android:id="@+id/form_info_2"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Obrigatório *"
            android:textColor="@color/red"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/form_info"
            app:layout_constraintEnd_toEndOf="@+id/form_info"
            app:layout_constraintTop_toTopOf="@+id/form_info" />

        <!-- Pergunta 1 -->
        <TextView
            android:id="@+id/section_1_question_1"
            style="@style/form_subquestion"
            android:text="@string/form_4_section_1_question_1"
            app:layout_constraintStart_toStartOf="@+id/form_info"
            app:layout_constraintEnd_toEndOf="@+id/form_info"
            app:layout_constraintTop_toBottomOf="@+id/form_info" />

        <!-- Input 1 -->
        <Spinner
            android:id="@+id/section_1_question_1_input"
            style="@style/form_input_dropdown"
            app:layout_constraintEnd_toEndOf="@+id/section_1_question_1"
            app:layout_constraintStart_toStartOf="@+id/section_1_question_1"
            app:layout_constraintTop_toBottomOf="@id/section_1_question_1" />

        <!-- Veículo Nº 2 -->
        <LinearLayout
            android:id="@+id/section_2_group"
            style="@style/form_group"
            app:layout_constraintEnd_toEndOf="@+id/section_1_question_1_input"
            app:layout_constraintStart_toStartOf="@+id/section_1_question_1_input"
            app:layout_constraintTop_toBottomOf="@id/section_1_question_1_input" >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/section_2_expansion_1"
                style="@style/form_input_expansion"
                android:text="Veículo Nº 2"
                app:layout_constraintEnd_toEndOf="@+id/section_2_group"
                app:layout_constraintStart_toStartOf="@+id/section_2_group"
                app:layout_constraintTop_toBottomOf="@id/section_2_group"
                />

            <TextView
                android:id="@+id/section_2_question_1"
                style="@style/form_question"
                android:background="#F60"
                android:text="Aqui está o conteúdo expandido!"
                app:layout_constraintEnd_toEndOf="@+id/section_2_expansion_1"
                app:layout_constraintStart_toStartOf="@+id/section_2_expansion_1"
                app:layout_constraintTop_toBottomOf="@id/section_2_expansion_1" />

        </LinearLayout>

        <!-- Botões inferiores -->
        <View
            android:id="@+id/buttons_section"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/section_2_group"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back_button"
            style="@style/form_back_button"
            app:layout_constraintEnd_toStartOf="@+id/cancel_button"
            app:layout_constraintStart_toStartOf="@+id/buttons_section"
            app:layout_constraintTop_toTopOf="@+id/buttons_section" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel_button"
            style="@style/form_cancel_button"
            app:layout_constraintEnd_toStartOf="@+id/next_button"
            app:layout_constraintStart_toEndOf="@+id/back_button"
            app:layout_constraintTop_toTopOf="@+id/buttons_section" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next_button"
            style="@style/form_next_button"
            app:layout_constraintEnd_toEndOf="@+id/buttons_section"
            app:layout_constraintStart_toEndOf="@+id/cancel_button"
            app:layout_constraintTop_toTopOf="@+id/buttons_section" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>