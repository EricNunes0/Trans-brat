<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/intro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:layout_editor_absoluteX="144dp"
    tools:layout_editor_absoluteY="82dp">

    <ImageView
        android:id="@+id/cidade"
        android:layout_width="546dp"
        android:layout_height="441dp"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="83dp"
        android:alpha="0.5"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cidade"
        tools:layout_editor_absoluteX="-2dp"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/estrada"
        android:layout_width="580dp"
        android:layout_height="260dp"
        android:layout_marginEnd="20dp"
        android:background="#FFF"
        android:rotation="15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cidade"
        app:layout_constraintTop_toBottomOf="@+id/TransTitle" />

    <ImageView
        android:id="@+id/onibus"
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:layout_marginBottom="100dp"
        android:contentDescription="@string/content_desc_trlogo_imagem"
        android:src="@drawable/onibus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.382"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/TransTitle"
        android:layout_width="440dp"
        android:layout_height="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="290dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Trans-Brat"
        android:textColor="#ffffff"
        android:textSize="42sp"
        app:layout_constraintBottom_toTopOf="@+id/estrada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.289"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TransTitle"
        android:layout_width="440dp"
        android:layout_height="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="290dp"
        android:fontFamily="@font/poppins"
        android:text="Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/estrada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.289"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="91dp"
        android:background="@drawable/blue_button"
        android:fontFamily="@font/poppins_bold"
        android:padding="16dp"
        android:text="Iniciar"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cidade" />
</androidx.constraintlayout.widget.ConstraintLayout>