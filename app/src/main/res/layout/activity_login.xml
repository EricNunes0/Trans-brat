<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".login">

    <ImageView
        android:id="@+id/trlogo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:contentDescription="@string/content_desc_trlogo_imagem"
        android:src="@drawable/trlogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/container"
        style="@style/container"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trlogo" />

    <EditText
        android:id="@+id/edit_email"
        style="@style/Edit"
        android:hint="MatrÃ­cula"
        android:drawableRight="@drawable/imagem_login"
        app:layout_constraintStart_toStartOf="@+id/container"
        app:layout_constraintEnd_toEndOf="@+id/container"
        app:layout_constraintTop_toTopOf="@id/container"
        />

    <EditText
        android:id="@+id/edit_senha"
        style="@style/Edit"
        android:hint="Senha"
        android:drawableRight="@drawable/senha_login"
        app:layout_constraintStart_toStartOf="@+id/container"
        app:layout_constraintEnd_toEndOf="@+id/container"
        app:layout_constraintTop_toBottomOf="@+id/edit_email"
        />

    <Button
        android:layout_width=""
        android:layout_height=""
        />


</androidx.constraintlayout.widget.ConstraintLayout>